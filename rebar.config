{erl_opts, [
            debug_info,
            {parse_transform, lager_transform},
            warnings_as_errors
           ]}.



{deps, [
        {lager, "3.7.0"},
        {libp2p, ".*", {git, "https://github.com/helium/erlang-libp2p.git", {branch, "master"}}},
        {hackney, "1.15.1"},
        {jsx, "2.10.0"},
        {helium_proto, ".*", {git, "https://github.com/helium/proto.git", {branch, "master"}}}
       ]}.

{plugins, [
           rebar3_fmt
          ]}.

{xref_checks, [
               undefined_function_calls,
               undefined_functions
              ]}.


{profiles, [
            {test, [
                    {deps, [{meck, "0.8.12"}]}
                   ]}
           ]}.
